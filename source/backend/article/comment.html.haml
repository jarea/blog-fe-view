                        %li.inline=link_to "取消", "#", :title => "取消", :class => "btn btn-cancel"
            %tfoot
              %tr
                %td{:colspan => "3"}
                  %span.total
                    留言數（3）
                  .pagination
                    %ul
                      %li=link_to "第一頁", "#", :title => "第一頁"
                      %li=link_to "Prev", "#", :title => "Prev"
                      %li.active=link_to "1", "#", :title => "1"
                      %li=link_to "2", "#", :title => "2"
                      %li=link_to "3", "#", :title => "3"
                      %li=link_to "Next", "#", :title => "Next"
