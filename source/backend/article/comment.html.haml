              %li.btn.delete=link_to "刪除", "#", :title => "刪除"
          %table.table.table-striped
            %thead
              %tr
                %th{:width => "5%"}
                  %input{:type => "checkbox"}
                %th{:width => "15%"} 
                  留言人
                %th{:width => "80%"} 
                  留言內容
            %tbody
              -5.times do
                %tr
                  %td
                    %input{:type => "checkbox"}
                  %td 
                    %p 2012/01/05 23:29
                    =image_tag( lorem.image("90"), :alt => "" )
                    %p.name
                      %a{:href => "#", :title => ""}
                        =lorem.name
                    %p.uid
                      = image_tag("/images/stars.png", :alt => "")
                  %td.text
                    %p.heading=link_to "留言標題標題標題標題標題", "#", :title => "留言標題標題標題標題標題"
